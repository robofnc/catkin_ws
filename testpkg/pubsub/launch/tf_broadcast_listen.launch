<launch>

  <arg name="model" default="$(find pubsub)/urdf/test_robot.urdf" />
  <arg name="gui" default="false" />
  <arg name="rvizconfig" default="$(find pubsub)/rviz/setting.rviz" />

  <param name="robot_description" command="$(find xacro)/xacro.py $(arg model)" />
  <param name="use_gui" value="$(arg gui)"/>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />

  <node name="vis_tf_broadcast" pkg="pubsub" type="tf_broadcast"/>
  <node name="vis_tf_listen"    pkg="pubsub" type="tf_listen" output="screen"/>
</launch>